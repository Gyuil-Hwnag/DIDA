<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="holderModel"
            type="com.dida.android.domain.model.nav.detailnft.Comments" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            image_from_url_circle="@{holderModel.userImg}">
        </ImageView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/user_img"
            android:layout_marginLeft="12dp"
            android:layout_weight="0.9">
            <TextView
                android:id="@+id/comment_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="@{holderModel.contents}"
                android:fontFamily="@font/pretendard_regular"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/custom_comments"
                app:layout_constraintBottom_toBottomOf="parent">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</layout>