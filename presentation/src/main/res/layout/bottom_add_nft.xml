<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.dida.android.presentation.views.nav.add.AddNftViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainblack"
            android:paddingTop="24dp"
            android:paddingBottom="36dp">

            <TextView
                android:id="@+id/main_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="언제든 마켓에 판매할 수 있어요!"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/pretendard_bold">
            </TextView>

            <TextView
                android:id="@+id/main_txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/main_txt1"
                android:text="· 마이페이지 > NFT 상세 > 판매하기"
                android:textColor="@color/surface6"
                android:textSize="14dp"
                android:fontFamily="@font/pretendard_bold">
            </TextView>

            <TextView
                android:id="@+id/ok_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_txt2"
                android:gravity="center"
                android:padding="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="24dp"
                android:text="NFT 생성하기"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/mainblack"
                android:textSize="16dp"
                android:background="@drawable/custom_okbtn_success">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>