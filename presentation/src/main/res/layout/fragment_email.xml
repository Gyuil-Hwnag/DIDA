<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.dida.android.presentation.views.email.EmailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainblack"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/email_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="이메일로 전송된 \n인증번호 6자리를 입력해주세요."
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginTop="117dp">
        </TextView>

        <EditText
            android:id="@+id/email_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_nickname_edit"
            android:imeOptions="actionSearch"
            android:inputType="number"
            android:drawablePadding="14dp"
            android:padding="16dp"
            android:textSize="14dp"
            android:fontFamily="@font/pretendard_regular"
            android:hint="6자리 숫자"
            android:maxLength="10"
            android:textColorHint="@color/surface6"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/email_main">
        </EditText>

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/email_check"
            app:layout_constraintBottom_toBottomOf="@id/email_check"
            app:layout_constraintRight_toRightOf="@id/email_check"
            android:text="05:00"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginRight="16dp">
        </TextView>

        <TextView
            android:id="@+id/resent_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/email_check"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="인증번호 다시 보내기"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginTop="18dp">
        </TextView>

        <TextView
            android:id="@+id/ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:padding="18dp"
            android:text="확인"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@{vm.verifyCheck ? @color/mainblack : @color/surface6}"
            android:textSize="16dp"
            android:background="@{vm.verifyCheck ? @drawable/custom_okbtn_success : @drawable/custom_okbtn_fail_custom}">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

