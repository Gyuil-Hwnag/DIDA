<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="holderModel"
            type="com.dida.domain.model.nav.home.Hots" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_hots"
        android:id="@+id/hots_main"
        android:layout_marginTop="8dp"
        android:layout_marginRight="14dp">

        <ImageView
            android:id="@+id/hots_img"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/custom_surface1_radius12">
        </ImageView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hots_contents_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/custom_surface2_bottom_radius12"
            android:padding="16dp">

            <TextView
                android:id="@+id/hots_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
            </TextView>

            <ImageView
                android:id="@+id/hots_coin_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toBottomOf="@id/hots_name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="16dp">
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>